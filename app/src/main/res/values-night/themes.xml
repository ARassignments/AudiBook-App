<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AudiBook" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!--    Mode-->

    <style name="ScreenBg">
        <item name="android:background">@color/neutral_100</item>
    </style>

    <style name="onBoardingBg">
        <item name="android:src">@drawable/background_pattern_dark</item>
    </style>

    <style name="SplashLogo">
        <item name="lottie_url">https://lottie.host/a1c1ad77-414a-4ba2-a7c9-19913c99a8c7/oZRMjhS0p8.json</item>
    </style>

    <!--    Input Field-->

    <style name="inputText">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/input_bg_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@drawable/input_placeholder_dark</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!--    OnBoarding-->

    <style name="onBoardingImg1">
        <item name="android:src">@drawable/people_dark</item>
    </style>

    <style name="onBoardingTitle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_5</item>
    </style>

    <style name="onBoardingContent">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neutral_5</item>
    </style>

    <!--    Error-->
    <style name="errorImg">
        <item name="android:src">@drawable/error_dark</item>
    </style>

</resources>